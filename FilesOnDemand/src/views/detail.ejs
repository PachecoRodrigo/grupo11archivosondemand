<!DOCTYPE html>
<html lang="en">
  <!-- head general -->
  <%- include('partials/head', {title: 'FOD'}) %>

  <!-- link css -->
    <link rel="stylesheet" href="/styles/styledetalle.css">
    
<body>
     <!-- header -->
     <%- include('partials/header') %>
     <!--fin del header -->

<!--inicio detalle del producto -->
    <section class="body-description">

        <section class="product-wrapper">
            <% oneproduct.forEach(item => { %>
                            
            <div class="product-title">
                <h1><%= item.title %></h1>
            </div>

            <section class="product">
                 
               

                <article class="product-img">
                    
                    <!-- Trigger the Modal -->
                    <img id="myImg" src="/img/<%= item.image %>" alt="Music">
                        <!-- The Modal -->
                        <div id="myModal" class="modal">
                            <!-- The Close Button -->
                            <span class="close">&times;</span>
                            <!-- Modal Content (The Image) -->
                            <img class="modal-content" id="img01">
                            <!-- Modal Caption (Image Text) -->
                            <div id="caption"></div>
                        </div>


                    <audio controls volume="0.9"  class="audio-example">
                        <source src="/media/<%= item.sound %>" type="audio/mp3">
                        You will see this text if native audio playback is not supported.
                    </audio>
                </article>

                <article class="product-description">
                    <p><%= item.description %></p>
                    
                    <div class="product-options">
                    
                        <div class="add-chart">
                            <button class="button-chart"><a href="/carrito">Agregar</a></button>
                            <button class="button-chart"><a href="/products/edit-form/<%= item.idProduct %>">Editar</a></button>
                        </div>
                    
                        <div class="product-price">
                            <h2><%= item.price %></h2>
                        </div>
                    </div>
                </article>
            </section>
            <% }) %>
        </section>
    </section>
    <!--fin detalle del producto -->

     <!-- footer -->    
     <%- include('partials/footer') %>
     <!-- fin del footer --> 
</body>
<script src="../../public/js/detalle.js"></script>
</html>