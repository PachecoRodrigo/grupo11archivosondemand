<!DOCTYPE html>
<html lang="en">
    <!-- head general -->
 <%- include('partials/head', {title: 'FOD'}) %>

 <!-- link css -->
        <link rel="stylesheet" href="\styles\create-form.css">
       
<body>

    <!-- header -->
    <%- include('partials/header') %>
    <!--fin del header -->


    <section class="create_product_section">
        <% oneproduct.forEach(item => { %>
         
        <div class="create_produc_title">
           <h2>Editando: <%= item.title %></h2>
        </div>

            <form action="">
                <div class="grid_create_form">
                <div class="input_box">
                    <label for="" class="label_decoration">Nombre del producto:</label>
                    <input type="text" name="" id="" value="<%= item.title %>">
                </div>

                <div class="input_box">
                    <label for="" class="label_decoration">Precio:</label>
                    <input type="text" name="" id="" value="<%= item.price %>">
                </div>

                <div class="input_box">
                    <label for="" class="label_decoration">Categoria:</label>
                    <select name="" id="" class="" >
                        <option value="default"  selected  <%= item.category %>>Seleccione una categoria</option>
                        <option value="sound">Audio</option> 
                        <option value="image">Imagen</option>
                        <option value="document">Escritura</option> 
                        <option value="design">Dise√±o</option>

                    </select>
                </div>
                
                <div class="input_box">
                    <label for="" class="label_decoration">Imagen:</label>
                    <input type="file" name="" id="" value="<%= item.image %>">
                </div>
                </div>

                <div class="description_box">
                    <label for="" class="label_decoration">Descripcion:</label>
                   <textarea name="bio" id="" cols="30" rows="10" ><%= item.description %></textarea>

                </div>


                <div class="create_button">
                    <button class="submit-button"> Guardar</button>

                </div>
            </form>

            <% }) %>

    </section>



     <!-- footer -->    
     <%- include('partials/footer') %>
     <!-- fin del footer -->  
</body>
</html>