<!DOCTYPE html>
<html lang="en">
<!-- head general -->
<%- include('partials/head', {title: 'FOD'}) %>

<!-- link css -->
    <link rel="stylesheet" href="/styles/registro.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
<body>
   <!-- header -->
   <%- include('partials/header') %>
   <!--fin del header -->
  
   
    <section class="main-section-register">
    
        <section class="register-section">

            <div class="register-title">

                <div class="register-picture">

                    <img src="\img\login-icon.png" alt="logo" class= "logo">

                </div>
            
            <p>Regístrate</p>
            
            </div>

                
            <form method="POST" class = "input-fields"action="/users/register">

                <div class="error_messages">
                    <% if (typeof(errors) != 'undefined') { %>

                        <% for( let index = 0; index < errors.length; index++ ) { %>
                            <p><%= errors[index].msg %> </p>
                        <% } %> 

                    <% } %>

                </div>
                
                    <input class="input-decoration" type="text" placeholder="Nombre" name="name" <% if (typeof(old) != 'undefined') { %> value= <%= old.name %> <%} %>>
                    <input class="input-decoration" type="text" placeholder="Apellido" name="surname"<% if (typeof(old) != 'undefined') { %> value= <%= old.surname %> <%} %>>
                    <input class="input-decoration" type="email" placeholder="E-mail" name="email" <% if (typeof(old) != 'undefined') { %> value= <%= old.email %> <%} %>>
                    <input class="input-decoration" type="password" placeholder="Contraseña" name="password" <% if (typeof(old) != 'undefined') { %> value= <%= old.password %> <%} %>>
                    <input class="input-decoration" type="password" placeholder="Confirmar contraseña" name="passwordCheck" <% if (typeof(old) != 'undefined') { %> value= <%= old.passwordCheck %> <%} %>>
                    <button type="submit" class="submit-button">Registrarse</button>
                
            </form>









        </section>


    </section>
      <!-- footer -->    
      <%- include('partials/footer') %>
      <!-- fin del footer -->  
</body>
</html>